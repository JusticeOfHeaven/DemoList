<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义ImageView属性-->
    <declare-styleable name="CustomImageView">
        <attr name="min_scale_factor" format="float"/>
        <attr name="max_scale_factor" format="float"/>
        <attr name="can_back_translate" format="boolean"/>
        <attr name="can_back_rotate" format="boolean"/>
        <attr name="can_back_scale" format="boolean"/>
        <attr name="animator_time" format="integer"/>
    </declare-styleable>
    <declare-styleable name="TitleLayout">
        <attr name="tl_icon_back" format="reference"/>
        <attr name="tl_icon_back_paddingLeft" format="dimension"/>
        <attr name="tl_title_text" format="string"/>
        <attr name="tl_title_textSize" format="dimension"/>
        <attr name="tl_title_textColor" format="color"/>
        <attr name="tl_right_text" format="string"/>
        <attr name="tl_right_textSize" format="dimension"/>
        <attr name="tl_right_textColor" format="color"/>
        <attr name="tl_right_textPaddingRight" format="dimension"/>
    </declare-styleable>
</resources>